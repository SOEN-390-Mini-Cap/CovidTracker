{
    "name": "covid-tracker-server",
    "version": "1.0.0",
    "description": "The server for CovidTracker",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "start": "node ./build/src/index.js",
        "dev": "DOTENV_CONFIG_PATH=.env.dev nodemon --exec ts-node ./src/index.ts -r dotenv/config",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "DOTENV_CONFIG_PATH=.env.test mocha ./src ./tests/unit -r dotenv/config",
        "test:integration": "DOTENV_CONFIG_PATH=.env.test mocha ./src ./tests/integration -r dotenv/config",
        "coverage": "nyc npm run test:unit",
        "lint": "eslint '*/**/*.{js,ts}' --max-warnings=0",
        "lint:fix": "eslint '*/**/*.{js,ts}' --fix",
        "db:init": "DOTENV_CONFIG_PATH=.env.dev ts-node ./db/initDB.ts -r dotenv/config",
        "db:seed": "DOTENV_CONFIG_PATH=.env.dev ts-node ./db/seedDB.ts -r dotenv/config"
    },
    "dependencies": {
        "dotenv": "^14.2.0",
        "inversify": "6.0.1",
        "inversify-restify-utils": "3.4.1",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "restify": "8.6.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "17.0.8",
        "@types/pg": "^8.6.4",
        "@types/restify": "8.5.4",
        "@types/sinon": "^10.0.6",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "chai": "^4.3.4",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "mocha": "^9.1.4",
        "nodemon": "^2.0.15",
        "nyc": "^15.1.0",
        "prettier": "^2.5.1",
        "sinon": "^12.0.1",
        "source-map-support": "^0.5.21",
        "supertest": "^6.2.1",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    }
}
